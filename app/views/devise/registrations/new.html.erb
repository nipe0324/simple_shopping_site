<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
  :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :name, t('devise.column.name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, t('devise.column.email'), :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, t('devise.column.password'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, t('devise.column.password_confirmation'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address, t('devise.column.address'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, cols: 20, rows: 4 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t('.sign_up'), :class => 'btn btn-primary' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
