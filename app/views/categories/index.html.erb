<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t 'categories.column.name' %></th>
      <th><%=t 'categories.column.updated_at' %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%=l category.created_at %></td>
        <td>
          <%= link_to t('categories.action.show'), category_path(category),
            :class => 'btn btn-mini' %>
          <%= link_to t('categories.action.edit'),
            edit_category_path(category), :class => 'btn btn-mini' %>
          <%= button_to t('categories.action.destroy'), category_path(category),
            :method => :delete,
            :data => { :confirm => t('categories.dialog.confirm') },
            :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('categories.action.new'), new_category_path, :class => 'btn btn-primary' %>
