<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%=t 'categories.column.name' %>:</strong></dt>
  <dd><%= @category.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('categories.action.back'), categories_path, :class => 'btn'  %>
  <%= link_to t('categories.action.edit'), edit_category_path(@category), :class => 'btn' %>
  <%= link_to t('categories.action.destroy'), category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('categories.dialog.confirm') },
              :class => 'btn btn-danger' %>
</div>
