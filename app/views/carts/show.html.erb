<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>名前</th>
			<th></th>
			<th>数量</th>
			<th>金額</th>
		</tr>
	</thead>
	<tbody>
		<% @cart.order_details.each do |order_detail| %>
		<tr class="item_line">
		  <td><%= order_detail.product.name %></td>
		  <td>&times;</td>
		  <td><%= order_detail.quantity %></td>
	    <td class="item_price"><%= number_to_currency(order_detail.total_price) %></td>
	  </tr>
		<% end %>

		<tr class="total_line">
			<td colspan="3">合計</td>
			<td class="total_cell"><%= number_to_currency(@cart.total_price) %><td>
		</tr>
	</tbody>
</table>

<div class="form-actions">
<%= link_to t('carts.action.empty'), @cart, method: :delete,
  data: { confirm: t('carts.dialog.confirm') }, :class => 'btn btn-danger' %>
</div>