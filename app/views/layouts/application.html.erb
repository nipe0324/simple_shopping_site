<!DOCTYPE html>
<html lang="jp">
<head>
  <title><%= t '.title' %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %> container-fluid'>
  <header>
		<div id="ttl">
			<h1> <%= t('.title') %></h1>
		</div>
		<div class="navbar">
			<div class="navbar-inner">
				<ul class="nav navbar-nav navbar-left">
					<li><%= link_to t('.home'), root_path %></a></li>
					<li><a href="/about/"><%= t '.about' %></a></li>
					<li><a href="/contact/"><%= t '.contact' %></a></li>
					<li><%= link_to t('.store'), store_path %></a></li>
		      <li class="dropdown">
    		    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('.manage') %><b class="caret"></b></a>
        		<ul class="dropdown-menu">
        			<li><%= link_to t('.products'), products_path %></li>
          		<li><%= link_to t('.categories'), categories_path %></li>
          		<li><%= link_to t('.orders'), orders_path %></li>
        		</ul>
      		</li>
				</ul>
				<ul class="nav navbar-right">
					<% if user_signed_in? %>
						<li><%= link_to truncate(current_user.name, length: 10), edit_user_registration_path %></a></li>
						<li><%= link_to t('.sign_out'), destroy_user_session_path, method: :delete %></a></li>
					<% else %>
						<li><%= link_to t('.regist'), new_user_registration_path %></a></li>
						<li><%= link_to t('.sign_in'), new_user_session_path %></a></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	</header>

	<div class="row-fluid">
	<div id="contents" class="span8">
		<% if flash[:error] %>
			<div class="alert alert-danger"><%= flash[:error] %></div>
		<% end %>
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% end %>

	  <%= yield %>
  </div><!-- /.contents -->

	<% if @cart %>
	<!-- Sidebar for cart ->
  <aside class="span4">
 		<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
		  <div class="well sidebar-nav">
		    <ul class="nav">
		    	<div id="cart">
		    		<%= render @cart %>
		    	</div>
		    </ul>
		  </div><!--/.well -->
		</div><!--/span-->
  </aside>
	</div><!-- /#.row -->
  <% end %>

  <footer>
  	<hr />
  	<p id="copyright">Copyright &copy; ****** All Rights Reserved.<p>
	</footer>

</body>
</html>
