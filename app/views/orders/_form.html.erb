<%= form_for(@order, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="control-group">
    <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>

  <div class="control-group">
    <span class="control-label"><%= t('.name') %></span>
    <div class="controls">
      <span class="text_field"><%= @order.user.name %></span>
    </div>
  </div>

  <div class="control-group">
    <span class="control-label"><%= t('.email') %></span>
    <div class="controls">
      <span class="text_field"><%= @order.user.email %></span>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address, t('.address'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, rows: 5, col: 30, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :pay_type, t('.pay_type'), :class => 'control-label' %>
    <div class="controls">
      <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: t('.pay_type_method'), 
        :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to t('.back'), store_path, :class => 'btn' %>
  </div>
<% end %>
