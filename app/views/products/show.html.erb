<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t 'products.column.name' %>:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong><%= t 'products.column.description' %>:</strong></dt>
  <dd><%= @product.description %></dd>
  <dt><strong><%= t 'products.column.image_url' %>:</strong></dt>
  <dd><%= @product.image_url %></dd>
  <dt><strong><%= t 'products.column.price' %>:</strong></dt>
  <dd><%= @product.price %></dd>
  <dt><strong><%= t 'products.column.status' %>:</strong></dt>
  <dd><%= @product.status %></dd>
  <dt><strong><%= t 'products.column.note' %>:</strong></dt>
  <dd><%= @product.note %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('products.action.back'), products_path, :class => 'btn'  %>
  <%= link_to t('products.action.edit'), edit_product_path(@product), :class => 'btn' %>
  <%= link_to t('products.action.destroy'), product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('products.dialog.confirm') },
              :class => 'btn btn-danger' %>
</div>
