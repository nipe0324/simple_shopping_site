<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, t('products.column.name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>*
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, t('products.column.description'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 5, :class => 'text_field' %>*
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_url, t('products.column.image_url'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_url, :class => 'text_field' %>*
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, t('products.column.price'), :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :price, :class => 'text_field' %>*
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('products.action.cancel'), products_path, :class => 'btn' %>
  </div>
<% end %>
