<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>

<% @products.each do |product| %>
	<div class="entry">
		<%= image_tag(product.image_url) %>
		<h3><%= product.name %></h3>
		<p><%= sanitize(product.description) %></p>
		<div class="price_line">
			<span class="price"><%= product.price %></span>
		</div>
	</div>
<% end %>